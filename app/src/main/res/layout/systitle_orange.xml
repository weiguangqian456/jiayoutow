<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/vs_blue">

    <!-- title -->
    <RelativeLayout
        android:id="@+id/small_title"
        android:layout_width="fill_parent"
        android:layout_height="54dp"
        android:background="@color/activity_title_color">

        <!-- left -->
        <LinearLayout
            android:id="@+id/btn_nav_left"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentLeft="true"
            android:gravity="left|center_vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <TextView
                android:id="@+id/btn_nav_left_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:drawablePadding="10dp"
                android:gravity="center"
                android:textColor="@color/vs_white"
                android:textSize="17sp"
                android:visibility="invisible" />
        </LinearLayout>

        <!-- middle -->
        <ImageView
            android:id="@+id/title_line_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/btn_nav_left"
            android:contentDescription="@string/app_name"
            android:src="@android:color/transparent"
            android:visibility="invisible" />

        <!-- right -->
        <LinearLayout
            android:id="@+id/btn_nav_right"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:gravity="right|center_vertical"
            android:orientation="vertical"
            android:paddingRight="20dp">

            <RelativeLayout
                android:id="@+id/btn_nav_right_rl"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/btn_nav_right_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:clickable="true"
                    android:textColor="@color/vs_white"
                    android:textSize="14sp"
                    android:visibility="gone" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/title_right_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@mipmap/vs_edit_image"
                android:contentDescription="@string/app_name"
                android:visibility="gone" />
        </LinearLayout>

        <!-- middle 图片 -->
        <ImageView
            android:id="@+id/title_line_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/btn_nav_right"
            android:contentDescription="@string/app_name"
            android:src="@android:color/transparent"
            android:visibility="invisible" />

        <!-- middle 文字 -->
        <TextView
            android:id="@+id/sys_title_txt"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:singleLine="true"
            android:textColor="@color/vs_white"
            android:textSize="@dimen/w_15_dip" />
    </RelativeLayout>
</RelativeLayout>