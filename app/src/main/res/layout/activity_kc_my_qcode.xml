<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--标题栏-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp54"
        android:background="@color/activity_title_color">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/dp20"
            android:paddingRight="@dimen/dp20"
            android:src="@drawable/icon_back" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/my_qr_code"
            android:textColor="@color/vs_white"
            android:textSize="@dimen/text_size_15sp" />

    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom">

        <ImageView
            android:id="@+id/iv_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/qr_code_bg" />

        <RelativeLayout
            android:layout_width="@dimen/dp170"
            android:layout_height="@dimen/dp170"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp80"
            android:background="@drawable/code_bg">

            <ImageView
                android:id="@+id/iv_result"
                android:layout_width="@dimen/dp140"
                android:layout_height="@dimen/dp140"
                android:layout_centerInParent="true"
                android:contentDescription="@string/app_name" />

        </RelativeLayout>

    </FrameLayout>
</LinearLayout>