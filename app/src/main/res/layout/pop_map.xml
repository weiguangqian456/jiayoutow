<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_stroke_gray_coner_small"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/w_50_dip">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="选择打开的应用"
            android:textColor="@color/public_color_333333"
            android:textSize="@dimen/w_17_dip" />
    </RelativeLayout>

    <View style="@style/line_below" />

    <RelativeLayout
        android:id="@+id/rl_amap"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/w_13_dip"
        android:layout_marginTop="@dimen/w_13_dip">

        <ImageView
            android:id="@+id/iv_amap"
            android:layout_width="@dimen/w_39_dip"
            android:layout_height="@dimen/w_39_dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/w_17_dip"
            android:src="@drawable/sec_amap" />

        <TextView
            android:id="@+id/tv_amap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/w_12_dip"
            android:layout_toRightOf="@+id/iv_amap"
            android:text="高德地图"
            android:textColor="@color/public_color_333333"
            android:textSize="@dimen/w_15_dip" />

        <CheckBox
            android:id="@+id/cb_amap"
            android:layout_width="@dimen/w_17_dip"
            android:layout_height="@dimen/w_16_dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/w_20_dip"
            android:button="@drawable/cb_map"
            android:checked="true" />
    </RelativeLayout>

    <View style="@style/line_below" />

    <RelativeLayout
        android:id="@+id/rl_baidumap"
        android:layout_width="match_parent"
        android:layout_height="@dimen/w_55_dip"
        android:layout_marginBottom="@dimen/w_13_dip"
        android:layout_marginTop="@dimen/w_13_dip">

        <ImageView
            android:id="@+id/iv_baidumap"
            android:layout_width="@dimen/w_39_dip"
            android:layout_height="@dimen/w_39_dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/w_14_dip"
            android:src="@drawable/sec_baidumap" />

        <TextView
            android:id="@+id/tv_baidumap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/w_12_dip"
            android:layout_toRightOf="@+id/iv_baidumap"
            android:text="百度地图"
            android:textColor="@color/public_color_333333"
            android:textSize="@dimen/w_15_dip" />

        <CheckBox
            android:id="@+id/cb_baidumap"
            android:layout_width="@dimen/w_17_dip"
            android:layout_height="@dimen/w_16_dip"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/w_20_dip"
            android:button="@drawable/cb_map" />
    </RelativeLayout>

    <View style="@style/line_below" />

    <RelativeLayout
        android:id="@+id/rl_address"
        android:layout_width="match_parent"
        android:layout_height="@dimen/w_37_dip">

        <CheckBox
            android:id="@+id/cb_remember"
            android:layout_width="@dimen/w_17_dip"
            android:layout_height="@dimen/w_16_dip"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/w_17_dip"
            android:layout_marginRight="@dimen/w_10_dip"
            android:button="@drawable/cb_remem" />

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/w_17_dip"
            android:layout_toRightOf="@+id/cb_remember"
            android:text="总是用此应用打开"
            android:textColor="#999da2"
            android:textSize="@dimen/w_13_dip" />
    </RelativeLayout>

    <View style="@style/line_below" />

    <TextView
        android:id="@+id/btn_ensure"
        android:layout_width="@dimen/w_235_dip"
        android:layout_height="@dimen/w_32_dip"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/w_10_dip"
        android:layout_marginTop="@dimen/w_10_dip"
        android:background="@drawable/btn_shape"
        android:gravity="center"
        android:text="确定"
        android:textColor="@color/vs_white"
        android:textSize="@dimen/w_16_dip" />
</LinearLayout>