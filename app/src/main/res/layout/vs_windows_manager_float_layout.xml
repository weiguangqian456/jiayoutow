<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_ll"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:background="@drawable/call_back_system_float_view_bg"
    android:orientation="vertical" >

    <!-- android:background="@drawable/call_back_system_float_view_bg" -->
    <!-- android:background="@drawable/vs_callphone_bg" -->

    <TextView
        android:id="@+id/vs_incoming_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:gravity="center"
        android:singleLine="true"
        android:text="186 6842 1927"
        android:textColor="#ffffff"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/vs_incoming_local"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/vs_incoming_number"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="14dp"
        android:gravity="center"
        android:singleLine="true"
        android:text="浙江 杭州"
        android:textColor="#ffffff"
        android:textSize="14dp" />

    <ImageView
        android:id="@+id/vs_incoming_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="15dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/call_back_float_close" />

</RelativeLayout>