<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/vs_white"
    android:orientation="vertical">


    <!--微信支付-->
    <LinearLayout
        android:id="@+id/ll_wechat"
        android:layout_width="match_parent"
        android:layout_height="@dimen/w_50_dip"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/w_50_dip"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="@dimen/w_22_dip"
                android:layout_height="@dimen/w_22_dip"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_marginLeft="@dimen/w_30_dip"
                android:src="@mipmap/refurl_wechat" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/w_39_dip"
                android:gravity="center"
                android:text="微信支付"
                android:textColor="#1D1D1D"
                android:textSize="12sp" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

    </LinearLayout>

    <!--支付宝-->
    <LinearLayout
        android:id="@+id/ll_alipay"
        android:layout_width="match_parent"
        android:layout_height="@dimen/w_50_dip"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/w_50_dip"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="@dimen/w_22_dip"
                android:layout_height="@dimen/w_22_dip"
                android:layout_gravity="center"
                android:scaleType="fitXY"
                android:layout_marginLeft="@dimen/w_30_dip"
                android:src="@mipmap/refuel_alipay" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/w_39_dip"
                android:gravity="center"
                android:text="支付宝支付"
                android:textColor="#1D1D1D"
                android:textSize="12sp" />
        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1" />

    </LinearLayout>
</LinearLayout>