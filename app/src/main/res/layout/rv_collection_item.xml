<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/rl_content" xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/w_6_dip"
    android:background="@color/vs_white">

    <ImageView
        android:id="@+id/iv_image"
        android:layout_width="@dimen/w_80_dip"
        android:layout_height="@dimen/w_80_dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/w_13_dip"
        android:scaleType="fitXY"
        android:src="@drawable/sec_localstore" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/w_14_dip"
        android:layout_toRightOf="@+id/iv_image">

        <RelativeLayout
            android:id="@+id/rl_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/w_15_dip">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/w_35_dip"
                android:layout_toLeftOf="@+id/tv_distance"
                android:ellipsize="end"
                android:text=""
                android:textColor="@color/public_color_333333"
                android:textSize="@dimen/w_14_dip" />

            <TextView
                android:id="@+id/tv_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/w_14_dip"
                android:textColor="@color/vs_blue"
                android:text=""
                android:textSize="@dimen/w_12_dip" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_perprice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_name"
            android:layout_marginTop="@dimen/w_9_dip">

            <ImageView
                android:layout_width="@dimen/w_12_dip"
                android:layout_height="@dimen/w_13_dip"
                android:layout_gravity="center"
                android:src="@drawable/sec_perprice" />

            <TextView
                android:id="@+id/tv_perprice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/w_12_dip"
                android:gravity="center"
                android:textColor="#4C5C6A"
                android:textSize="@dimen/w_12_dip" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_perprice"
            android:layout_marginTop="@dimen/w_9_dip">

            <ImageView
                android:layout_width="@dimen/w_12_dip"
                android:layout_height="@dimen/w_13_dip"
                android:layout_gravity="center"
                android:src="@drawable/sec_location" />

            <TextView
                android:id="@+id/tv_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/w_12_dip"
                android:layout_marginRight="@dimen/w_33_dip"
                android:ellipsize="end"
                android:gravity="left"
                android:maxLines="2"
                android:textColor="#4d5d6b"
                android:textSize="@dimen/w_12_dip" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_discount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_address"
            android:layout_marginTop="@dimen/w_9_dip"
            android:layout_marginBottom="@dimen/w_9_dip">

            <ImageView
                android:layout_width="@dimen/w_16_dip"
                android:layout_height="@dimen/w_12_dip"
                android:layout_gravity="center"
                android:src="@drawable/sec_discount" />

            <TextView
                android:id="@+id/tv_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginRight="@dimen/w_15_dip"
                android:layout_marginLeft="@dimen/w_12_dip"
                android:gravity="left"
                android:textColor="#1086FF"
                android:textSize="@dimen/w_12_dip" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>