<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vs_recharge_task_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/vs_gray_simaple"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/vs_recharge_task"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@color/vs_white"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:id="@+id/vs_recharge_task_th"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:background="@drawable/vs_recharge_th_bg"
            android:gravity="center"
            android:text="@string/vs_recharge_th_tv"
            android:textColor="@color/vs_white"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/vs_recharge_task_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"
                android:textColor="@color/vs_black"
                android:textSize="18sp" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/recharge_line_bottom"
        android:layout_width="match_parent"
        android:layout_height="0.67dp"
        android:layout_marginBottom="7dp"
        android:background="@color/vs_line_color" />
</LinearLayout>