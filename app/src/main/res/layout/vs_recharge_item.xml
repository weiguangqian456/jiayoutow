<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/charge_package_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:layout_marginTop="0.67dp"
        android:background="@drawable/vs_personal_bg_color" >

        <ImageView
            android:id="@+id/charge_paytypes_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="29dp"
            android:src="@drawable/vs_recharge_alipay" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/charge_paytypes_img"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/charge_package_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="支付宝客户端支付"
                android:textColor="@color/vs_black"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/charge_package_hint"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+@string/recharge_paytype_hinit1"
                android:textColor="@color/vs_recharge_hint_color"
                android:textSize="14.5sp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="0.67dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="50dp"
            android:background="@color/line" />
    </RelativeLayout>

</RelativeLayout>