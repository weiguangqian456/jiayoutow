<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/vs_whilte_btn_shape_bg"
    android:minWidth="280dip"
    android:orientation="vertical">


    <TextView
        android:id="@+id/dialog_title"
        style="@style/DialogText.Title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@drawable/vs_whilte_btn_top_shape_bg"
        android:gravity="center"
        android:text="@string/prompt"
        android:textColor="@color/Black" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.67dp"
        android:background="@color/vs_line_color" />

    <TextView
        android:id="@+id/message"
        style="@style/DialogText"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        android:layout_marginTop="25dp"
        android:background="@color/vs_white"
        android:gravity="center"
        android:lineSpacingMultiplier="1.2"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:textColor="@color/vs_black"
        android:text="aaaaaaaaaaa"
        android:textSize="18sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.67dp"
        android:background="@color/vs_line_color" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/vs_whilte_btn_bottom_right_shape_selecter"
        android:singleLine="true"
        android:textColor="@color/vs_blue_slight"
        android:textSize="19.5sp"
        android:textStyle="bold"
        android:onClick="onClick_Sure"
        android:text="@string/sure" />

</LinearLayout>