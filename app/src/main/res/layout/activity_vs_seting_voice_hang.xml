<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/vs_gray_simaple"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <!-- 顶部标题 -->

        <include layout="@layout/systitle_orange" />
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.67dp"
        android:background="@color/vs_line_color" />

    <TextView
        android:id="@+id/vs_seting_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:textColor="@color/vs_gray_deep"
        android:textSize="16sp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.67dp"
        android:layout_marginTop="10dp"
        android:background="@color/vs_line_color" />

    <RelativeLayout
        android:id="@+id/vs_seting_pwd"
        android:layout_width="fill_parent"
        android:layout_height="55.5dp"
        android:background="@color/vs_white" >

        <TextView
            android:id="@+id/iv_right_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:text="@string/vs_seting_voice_str"
            android:textColor="@color/vs_black"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iv_right_icon_set"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:contentDescription="@string/app_name"
            android:cursorVisible="true"
            android:padding="10dp"
            android:src="@drawable/vs_switch_close" />
    </RelativeLayout>

    <View
        android:id="@+id/line_center"
        android:layout_width="fill_parent"
        android:layout_height="0.67dp"
        android:layout_marginLeft="20dp"
        android:background="@color/vs_line_color" />

    <RelativeLayout
        android:id="@+id/vs_seting_hintVoice"
        android:layout_width="fill_parent"
        android:layout_height="55.5dp"
        android:background="@color/vs_white"
        android:visibility="gone" >

        <TextView
            android:id="@+id/iv_right_tv_hintVoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:gravity="center_vertical"
            android:text="@string/vs_seting_hintvoice_str"
            android:textColor="@color/vs_black"
            android:textSize="18sp" />

        <ImageView
            android:id="@+id/iv_right_icon_set_hintVoice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:clickable="true"
            android:contentDescription="@string/app_name"
            android:cursorVisible="true"
            android:padding="10dp"
            android:src="@drawable/vs_switch_close" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.67dp"
        android:background="@color/vs_line_color" />

</LinearLayout>