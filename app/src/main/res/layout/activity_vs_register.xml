<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/vs_gray_simaple">

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:orientation="vertical">

        <include layout="@layout/systitle_orange" />
    </LinearLayout>

    <View
        android:id="@+id/line1"
        android:layout_width="fill_parent"
        android:layout_height="0.67dp"
        android:layout_below="@id/title"
        android:background="@color/vs_line_color" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.67dp"
                android:background="@color/vs_line_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/vs_white">

                <ImageView
                    android:id="@+id/vs_set_register_eidt_del"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12.5dp"
                    android:clickable="true"
                    android:padding="15dp"
                    android:src="@drawable/vs_del"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/vs_register_phone_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="53dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:text="手机号"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/vs_register_edit"
                    android:layout_width="match_parent"
                    android:layout_height="53dp"
                    android:layout_toRightOf="@id/vs_register_phone_txt"
                    android:background="@drawable/vs_edittext_shape"
                    android:gravity="center_vertical"
                    android:hint="@string/vs_phone_hint"
                    android:inputType="phone"
                    android:maxLength="13"
                    android:paddingLeft="28dp"
                    android:paddingRight="28dp"
                    android:singleLine="true"
                    android:textColor="@color/vs_black"
                    android:textColorHint="@color/vs_gray"
                    android:textSize="18sp" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.67dp"
                android:background="@color/vs_line_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/vs_white">

                <TextView
                    android:id="@+id/vs_register_yanzheng_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="53dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:text="验证码"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/vs_btn_reg_code"
                    android:layout_width="90dp"
                    android:layout_height="52dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:background="@color/public_color_EC6941"
                    android:text="@string/bind_get_proving"
                    android:textColor="@color/White" />

                <EditText
                    android:id="@+id/vs_edit_reg_code"
                    android:layout_width="wrap_content"
                    android:layout_height="53dp"
                    android:layout_toRightOf="@id/vs_register_yanzheng_txt"
                    android:background="@drawable/vs_edittext_shape"
                    android:gravity="center_vertical"
                    android:hint="@string/vs_code_hint"
                    android:inputType="phone"
                    android:maxLength="13"
                    android:paddingLeft="28dp"
                    android:paddingRight="28dp"
                    android:singleLine="true"
                    android:textColor="@color/vs_black"
                    android:textColorHint="@color/vs_gray"
                    android:textSize="18sp" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.67dp"
                android:background="@color/vs_line_color" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/vs_white">

                <ImageView
                    android:id="@+id/set_password_show_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12dp"
                    android:clickable="true"
                    android:padding="15dp"
                    android:src="@drawable/vs_checked_no" />

                <TextView
                    android:id="@+id/vs_register_passwd_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="53dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:text="密    码"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/vs_passeord_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="53dp"
                    android:layout_toRightOf="@id/vs_register_passwd_txt"
                    android:background="@drawable/vs_edittext_shape"
                    android:gravity="center_vertical"
                    android:hint="@string/login_hint_pwd"
                    android:inputType="number"
                    android:maxLength="13"
                    android:paddingLeft="28dp"
                    android:paddingRight="28dp"
                    android:password="true"
                    android:singleLine="true"
                    android:textColor="@color/vs_black"
                    android:textColorHint="@color/vs_gray"
                    android:textSize="18sp" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.67dp"
                android:background="@color/vs_line_color" />

            <RelativeLayout
                android:id="@+id/vs_set_register_eidt_invide_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/vs_white">

                <ImageView
                    android:id="@+id/vs_set_register_eidt_del_invide"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="12.5dp"
                    android:clickable="true"
                    android:padding="7dp"
                    android:src="@drawable/vs_reg_code" />

                <TextView
                    android:id="@+id/vs_register_invit_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="53dp"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:text="邀请码"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/vs_register_edit_invide"
                    android:layout_width="wrap_content"
                    android:layout_height="53dp"
                    android:layout_toRightOf="@id/vs_register_invit_txt"
                    android:background="@drawable/vs_edittext_shape"
                    android:gravity="center_vertical"
                    android:hint="@string/vs_phone_hint_invide"
                    android:inputType="phone"
                    android:maxLength="13"
                    android:paddingLeft="28dp"
                    android:paddingRight="28dp"
                    android:singleLine="true"
                    android:textColor="@color/vs_black"
                    android:textColorHint="@color/vs_gray"
                    android:textSize="18sp" />
            </RelativeLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="0.67dp"
                android:background="@color/vs_line_color" />

        </LinearLayout>

        <TextView
            android:id="@+id/vs_regit_txt"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center_horizontal"
            android:text="注：请填写邀请人的手机号码"
            android:textColor="#FA4141" />

        <com.edawtech.jiayou.widgets.MyButton
            android:id="@+id/vs_register_next_btn"
            android:layout_width="230dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="38dp"
            android:background="@drawable/vs_green_btn_selecter"
            android:text="@string/vs_ok"
            android:textColor="@color/vs_white"
            android:textSize="19.5sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="34dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vs_reghist_server_hint"
            android:textColor="@color/vs_gray_deep"
            android:textSize="14.5sp" />

        <TextView
            android:id="@+id/vs_register_server"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vs_reghist_server_tv"
            android:textColor="@color/vs_blue_slight"
            android:textSize="14.5sp" />
    </LinearLayout>

</RelativeLayout>