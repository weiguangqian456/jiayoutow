<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:ns1="http://schemas.android.com/tools">
    <integer-array name="material_colors" ns1:ignore="ResourceName">
        <item>@color/material_red</item>
        <item>@color/material_green</item>
        <item>@color/material_blue</item>
        <item>@color/material_yellow</item>
    </integer-array>
    <color name="material_blue" ns1:ignore="ResourceName">#ff03A9F4</color>
    <color name="material_green" ns1:ignore="ResourceName">#ff4CAF50</color>
    <color name="material_red" ns1:ignore="ResourceName">#ffF44336</color>
    <color name="material_yellow" ns1:ignore="ResourceName">#ffFFEB3B</color>
    <string name="app_name" ns1:ignore="ResourceName">BRLayoutLibrary</string>
    <declare-styleable name="CircleProgressBar" ns1:ignore="ResourceName">
        <attr format="dimension" name="mlpb_inner_radius"/>
        <attr format="color" name="mlpb_background_color"/>
        <attr format="color" name="mlpb_progress_color"/>
        <attr format="dimension" name="mlpb_progress_stoke_width"/>
        <attr format="boolean" name="mlpb_show_arrow"/>
        <attr format="boolean" name="mlpb_enable_circle_background"/>
        <attr format="dimension" name="mlpb_arrow_width"/>
        <attr format="dimension" name="mlpb_arrow_height"/>

        <attr format="integer" name="mlpb_progress"/>
        <attr format="integer" name="mlpb_max"/>


        <attr format="dimension" name="mlpb_progress_text_size"/>
        <attr format="color" name="mlpb_progress_text_color"/>

        <!--<attr name="mlpb_progress_text_offset" format="dimension"/>-->

        <attr format="enum" name="mlpb_progress_text_visibility">
            <enum name="visible" value="0"/>
            <enum name="invisible" value="1"/>
        </attr>
    </declare-styleable>
    <declare-styleable name="MaterialRefreshLayout">
        <attr format="boolean" name="overlay" ns1:ignore="ResourceName"/>
        <!-- style for MaterialWaveView  -->
        <attr format="enum" name="wave_height_type" ns1:ignore="ResourceName">
            <enum name="normal" value="0"/>
            <enum name="higher" value="1"/>
        </attr>
        <attr format="color" name="wave_color" ns1:ignore="ResourceName"/>
        <attr format="boolean" name="wave_show" ns1:ignore="ResourceName"/>
        <!-- style for CircleProgressBar  -->
        <attr format="reference" name="progress_colors" ns1:ignore="ResourceName"/>
        <attr format="dimension" name="progress_stoke_width" ns1:ignore="ResourceName"/>
        <attr format="color" name="progress_backgroud_color" ns1:ignore="ResourceName"/>
        <attr format="boolean" name="progress_show_arrow" ns1:ignore="ResourceName"/>
        <attr format="dimension" name="progress_arrow_width" ns1:ignore="ResourceName"/>
        <attr format="dimension" name="progress_arrow_height" ns1:ignore="ResourceName"/>
        <attr format="boolean" name="progress_show_circle_backgroud" ns1:ignore="ResourceName"/>
        <attr format="integer" name="progress_value" ns1:ignore="ResourceName"/>
        <attr format="integer" name="progress_max_value" ns1:ignore="ResourceName"/>
        <attr format="dimension" name="progress_text_size" ns1:ignore="ResourceName"/>
        <attr format="color" name="progress_text_color" ns1:ignore="ResourceName"/>
        <attr format="enum" name="progress_text_visibility" ns1:ignore="ResourceName">
            <enum name="visible" value="0"/>
            <enum name="invisible" value="1"/>
        </attr>
        <attr format="enum" name="progress_size_type" ns1:ignore="ResourceName">
            <enum name="normal" value="0"/>
            <enum name="big" value="1"/>
        </attr>
        <attr format="boolean" name="isLoadMore" ns1:ignore="ResourceName"/>
    </declare-styleable>
</resources>